                <!-- Vista -->
        
                <record model="ir.ui.view" id="sesion_tree_view">
                    <field name="name">sesion.tree</field>
                    <field name="model">sesiones.usuarios</field>
                    <field name="type">tree</field>
                    <field name="arch" type="xml">
                        <tree string="sesion vista">
                            <field name="empleado" />
                            <field name="hora_entrada" />
                            <field name="hora_salida" />
                            <field name="fecha" />
                        </tree>
                    </field>
                </record>
        
                <!-- Formularios -->
        
                <record model="ir.ui.view" id="sesion_form_view">
                    <field name="name">sesiones.form</field>
                    <field name="model">sesiones.usuarios</field>
                    <field name="type">form</field>
                    <field name="arch" type="xml">
                     <form string="sesion form">
                        <sheet>
                            <group>
                                <field name="empleado" />
                                <field name="hora_entrada" />
                                <field name="hora_salida" />
                                <field name="fecha" />
                            </group>
                        </sheet>
                      </form>
                    </field>
                </record>

                <record id="sesion_graph_view" model="ir.ui.view">
                    <field name="name">sesion.graph</field>
                    <field name="model">sesiones.usuarios</field>
                    <field name="arch" type="xml">
                        <graph type="pivot">
                            <field name="empleado" type="col" />
                            <field name="hora_entrada" interval="week" />
                            <field name="hora_salida" interval="week" />
                            <field name="fecha" type="measure" />
                        </graph>
                    </field>
                </record>

         
                
                <!-- Definimos un menu de solo vista, este menu tiene como menu padre a Cursos -->
                <menuitem id="sesion_empleados_menu" name="Sesion de Empleados" parent="main__menu"/>
        
                <!-- Definimos otro menu que tiene como menu padre a Curso academicos.-->
                <menuitem id="sesiones_empleados_menu" name="Empleados" parent="sesion_empleados_menu" action="sesion_list_action"/>
                
